#include "main.h"

/**
 * print_line - draws a straigth line in the terminal
 *b@n: number of times the character _ should be printed
 */
void print_line(int n)
{
	if (n <= 0)
	{
		_putchar('\n');
	} else
	{
		int i;

		for (i = 1; i <= n; i++)
		{
			_putchar('_');
		}
		_putchar('\n');
	}

}
#include <stdio.h>



/**

 * print_line - Print line dependent on the integer n.

 * @n : The number of '_' characters to use

 * Return: Void.

 */

void print_line(int n)
	
{
	
	int i;
	

	
	for (i = 0; i < n; i++)
		
	{
		
		_putchar('_');
		
	}putchar('\n');
	
}

